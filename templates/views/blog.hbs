<h1>Reviews</h1>
<div class="blog">
	{{# each data.posts.results}}
	<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="post">
		<h2><a href="{{postUrl slug}}">{{{title}}}</a>
			<span class="lead text-muted">{{{categoryList categories prefix="Posted in "}}}
				{{#if author.name.first}}by {{author.name.first}}{{/if}}
			</span>
		</h2>
		<div class="row">
			<div class="col-md-3">
				<img src="{{image.url}}" class="img-responsive"/>
			</div>
			<div class="col-md-6">
				<p>{{{content.brief}}}</p>
				<p class="read-more"><a href="{{postUrl slug}}">Read more...</a></p>
			</div>
		</div>
	</div>
	{{/each}}
	{{>pagination}}
</div>
